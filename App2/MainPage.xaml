<Page 
    x:Name="MyPage"
    x:Class="App2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="MyPage_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel Margin="220,1243,1640,47">
            <Button 
    			x:Name="ClearButton"
    			Content="Clear"
    			HorizontalAlignment="Left"
    			VerticalAlignment="Top"
    			Height="150"
    			Width="150" 
    			Click="ClearButton_Click" 
    			FontSize="40"
            />
            <Button 
    			x:Name="UndoButton" 
    			Content="Undo" 
    			HorizontalAlignment="Left" 
    			VerticalAlignment="Top" 
    			Height="150" 
    			Width="150" 
    			Click="UndoButton_Click"
    			FontSize="40"
    			Margin="275,0,0,0"
            />
            <Button 
    			x:Name="FinishButton" 
    			Content="Finish" 
    			HorizontalAlignment="Left" 
    			VerticalAlignment="Top" 
    			Height="150" 
    			Width="150"
    			FontSize="40" 
    			Click="FinishButton_Click"
    			Margin="550,0,0,0"
            />
        </RelativePanel>
        <Border 
            x:Name="MyCanvasBorder" 
            BorderBrush="Black" 
            BorderThickness="10" 
            HorizontalAlignment="Left" 
            Height="900" 
            Width="900" 
            Margin="120,300,0,0" 
            VerticalAlignment="Top"
            >
            <InkCanvas 
                x:Name="MyInkCanvas"
                />
        </Border>
        <TextBlock 
            x:Name="InstructionTextBlock" 
            HorizontalAlignment="Left" 
            Margin="120,59,0,0" 
            TextWrapping="Wrap" 
            Text="TextBlock" 
            VerticalAlignment="Top" 
            Width="2276" 
            Height="160"
            />
    </Grid>
</Page>
